# config.env

# === IP Pool Configuration ===
POOL_NAME="blue-pool"
START_IP="172.16.30.201"
STOP_IP="172.16.30.220"

# === L2 Announcement Policy Configuration ===
POLICY_NAME="local-announce-policy"

# Which interfaces to announce on (regex supported)
# Common examples:
# - eth.*           → all eth interfaces
# - ens[0-9]+       → ens0, ens1, ens33 etc.
# - enp.*           → enp0s3, enp1s0 etc.
INTERFACE="^ens[0-9]+"
INTERFACES=(
  "^ens[0-9]+"
  # "^eth[0-9]+"
  # "eth0"
)

# Whether to announce externalIPs and loadBalancerIPs
ANNOUNCE_EXTERNAL_IPS=true
ANNOUNCE_LOADBALANCER_IPS=true

# Optional: enable service selector (uncomment and fill if needed)
# SERVICE_SELECTOR_MATCH_LABELS=(
#   "color=blue"
#   "app=frontend"
# )
SERVICE_SELECTOR_MATCH_LABELS=()   # empty = disabled

# Optional: node selector (leave empty array to disable)
NODE_SELECTOR_MATCH_EXPRESSIONS=(
  # Example: exclude control-plane nodes
  "key: node-role.kubernetes.io/control-plane"
  "operator: DoesNotExist"
  # Add more lines if needed (each 2 lines = one expression)
)